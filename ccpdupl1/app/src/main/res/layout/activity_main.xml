<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/main_layout"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:id="@+id/region_app_title"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/text_app_title"
                android:text="@string/app_name"
                android:fontFamily="@font/jeju_myeongjo"
                android:textSize="35dp"
                android:padding="30dp"
                android:textColor="@color/black"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:id="@+id/region_weather"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:id="@+id/region_weather_icon"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/cloudy"
                        ></ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/region_weather_info"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="15'/22'/40%"
                        android:textColor="@color/black"
                        android:fontFamily="@font/jeju_myeongjo"
                        android:gravity="center">

                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="우리 동네"
                    android:textSize="25dp"
                    android:fontFamily="@font/jeju_myeongjo"
                    android:textColor="@color/black"
                    android:id="@+id/text_region_name"
                    android:gravity="bottom"
                    android:paddingBottom="5dp"
                    ></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="서울특별시 성북구 안암동 안암로 145"
                    android:textSize="15dp"
                    android:fontFamily="@font/jeju_myeongjo"
                    android:textColor="@color/black"
                    android:id="@+id/text_region_info"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            ></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:id="@+id/region_monthly_schedule"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/text_monthly_schedule"
                android:text="9월에는"
                android:textColor="@color/black"
                android:fontFamily="@font/jeju_myeongjo"
                android:textSize="20dp"
                android:paddingLeft="30dp"
                ></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="vertical"
                android:id="@+id/region_monthly_event"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <View
                        android:layout_width="4px"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:layout_marginLeft="50dp"
                        ></View>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:id="@+id/region_today_recom"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="오늘은"
                android:textColor="@color/black"
                android:fontFamily="@font/jeju_myeongjo"
                android:textSize="20dp"
                android:paddingLeft="35dp"
                android:gravity="center_vertical"

                ></TextView>
            <GridView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:numColumns="3"

                ></GridView>
        </LinearLayout>
        <fragment
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/bottom_nav"
            ></fragment>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>